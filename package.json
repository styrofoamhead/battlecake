{
	"name": "battlecake",
	"version": "1.0.0",
	"description": "",
	"main": "index.html",
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		"lite": "lite-server",
		"start": "npm run watch:all",
		"scss": "node-sass -o css/ css/",
		"watch:scss": "onchange 'css/*.scss' -- npm run scss",
		"watch:all": "parallelshell 'npm run watch:scss' 'npm run lite'",
		"copyfonts": "copyfiles -f node_modules/font-awesome/fonts/* dist/fonts",
		"imagemin": "imagemin img/* -o dist/img",
		"usemin": "usemin contact.html -d dist --htmlmin -o dist/contact.html && usemin about.html -d dist --htmlmin -o dist/about.html && usemin index.html -d dist --htmlmin -o dist/index.html && usemin menu.html -d dist --htmlmin -o dist/menu.html",
		"build": "npm run clean && npm run imagemin && npm run copyfonts && npm run usemin",
		"clean": "rimraf dist"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/styrofoamhead/battlecake.git"
	},
	"author": "Jeff",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/styrofoamhead/battlecake/issues"
	},
	"homepage": "https://github.com/styrofoamhead/battlecake#readme",
	"devDependencies": {
		"copyfiles": "^2.0.0",
		"imagemin-cli": "^3.0.0",
		"lite-server": "^2.3.0",
		"node-sass": "^4.12.0",
		"onchange": "^3.3.0",
		"parallelshell": "^3.0.1",
		"rimraf": "^2.6.2",
		"usemin-cli": "^0.5.1"
	},
	"dependencies": {
		"bootstrap": "^4.0.0",
		"font-awesome": "^4.7.0",
		"jquery": "^3.3.1",
		"popper.js": "^1.12.9"
	}
}
